{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",                
    "jsx": "react-jsx",              
    "esModuleInterop": true,     
    "forceConsistentCasingInFileNames": true,      
    "strict": true,                                   
    "skipLibCheck": true,
    "allowJs": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*",
    "**/*.md"
  ],
  "exclude": [
    "src/stories",
    "src/main.jsx",
    "src/App.jsx",
  ]
}